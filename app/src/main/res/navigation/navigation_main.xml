<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/awardsFragment">

    <fragment
        android:id="@+id/sessionsFragment"
        android:name="ru.rychkovkirill.englishclub.ui.user.mainpage.sessions.SessionsFragment"
        android:label="fragment_sessions"
        tools:layout="@layout/fragment_sessions" >
        <action
            android:id="@+id/action_sessionsFragment_to_sessionsDetailsFragment"
            app:destination="@id/sessionsDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/awardsFragment"
        android:name="ru.rychkovkirill.englishclub.ui.user.mainpage.awards.AwardsFragment"
        android:label="fragment_awards"
        tools:layout="@layout/fragment_awards" >
        <action
            android:id="@+id/action_awardsFragment_to_awardsDetailsFragment"
            app:destination="@id/awardsDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/activitiesFragment"
        android:name="ru.rychkovkirill.englishclub.ui.user.mainpage.activities.ActivitiesFragment"
        android:label="fragment_activities"
        tools:layout="@layout/fragment_activities" >
        <action
            android:id="@+id/action_activitiesFragment_to_activitiesDetailsFragment"
            app:destination="@id/activitiesDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/nearestSessionsFragment"
        android:name="ru.rychkovkirill.englishclub.ui.user.mainpage.nearestsessions.NearestSessionsFragment"
        android:label="fragment_nearest_sessions"
        tools:layout="@layout/fragment_nearest_sessions" >
        <action
            android:id="@+id/action_nearestSessionsFragment_to_nearestSessionsDetailsFragment"
            app:destination="@id/nearestSessionsDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/newsFragment"
        android:name="ru.rychkovkirill.englishclub.ui.user.mainpage.news.NewsFragment"
        android:label="fragment_news"
        tools:layout="@layout/fragment_news" >
        <action
            android:id="@+id/action_newsFragment_to_newsDetailsFragment"
            app:destination="@id/newsDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/awardsDetailsFragment"
        android:name="ru.rychkovkirill.englishclub.ui.user.mainpage.awards.AwardsDetailsFragment"
        android:label="fragment_awards_details"
