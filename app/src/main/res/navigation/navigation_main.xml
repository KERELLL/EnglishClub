        android:id="@+id/newsDetailsFragment"
        android:name="ru.rychkovkirill.englishclub.ui.user.mainpage.news.NewsDetailsFragment"
        android:label="fragment_news_details"
        tools:layout="@layout/fragment_news_details" />
    <fragment
        android:id="@+id/sessionsDetailsFragment"
        android:name="ru.rychkovkirill.englishclub.ui.user.mainpage.sessions.SessionsDetailsFragment"
        android:label="fragment_sessions_details"
        tools:layout="@layout/fragment_sessions_details" />
